<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.editors">
      <editor
            class="com.aptana.editor.php.internal.ui.editor.PHPSourceEditor"
            contributorClass="com.aptana.editor.common.CommonTextEditorActionContributor"
            default="false"
            extensions="php, phtml, inc ,ctp"
            icon="icons/full/obj16/php.png"
            id="com.aptana.editor.php"
            name="%editor.name">
         <contentTypeBinding
               contentTypeId="com.aptana.contenttype.php">
         </contentTypeBinding>
      </editor>
   </extension>
   <extension
         point="org.eclipse.core.contenttype.contentTypes">
      <content-type
            base-type="org.eclipse.core.runtime.text"
            file-extensions="php, phtml, inc, ctp"
            id="com.aptana.contenttype.php"
            name="%content-type.name"
            priority="normal">
      </content-type>
   </extension>
   <extension
         id="phpNature"
         name="%nature.name"
         point="org.eclipse.core.resources.natures">
      <runtime>
         <run
               class="com.aptana.editor.php.core.PHPNature">
         </run>
      </runtime>
   </extension>
   <extension
         point="org.eclipse.ui.ide.projectNatureImages">
      <image
            icon="icons/full/ovr16/php_ovr.gif"
            id="com.aptana.editor.php.projectnature"
            natureId="com.aptana.editor.php.phpNature">
      </image>
   </extension>
   <extension
         point="org.eclipse.core.runtime.preferences">
      <initializer
            class="com.aptana.editor.php.core.PHPCorePreferenceInitializer">
      </initializer>
      <initializer
            class="com.aptana.editor.php.internal.ui.preferences.PhpUIPreferencesInitializer">
      </initializer>
   </extension>
   <extension
         point="org.eclipse.core.expressions.propertyTesters">
      <propertyTester
            class="com.aptana.editor.php.core.NaturePropertyTester"
            id="com.aptana.editor.php.NaturePropertyTester"
            namespace="com.aptana.editor.php"
            properties="nature"
            type="org.eclipse.core.resources.IResource">
      </propertyTester>
   </extension>
   <extension
         point="org.eclipse.ui.propertyPages">
      <page
            class="com.aptana.editor.php.internal.ui.preferences.PhpDevelopmentPage"
            id="com.aptana.editor.php.PHPDevelopmentPage"
            name="%project-property-page.name">
         <enabledWhen>
            <and>
               <instanceof
                     value="org.eclipse.core.resources.IProject">
               </instanceof>
               <test
                     args="com.aptana.editor.php.phpNature"
                     property="com.aptana.editor.php.nature"
                     value="true">
               </test>
            </and>
         </enabledWhen>
      </page>
   </extension>
   <extension
         point="org.eclipse.ui.newWizards">
      <wizard
            category="com.aptana.ui.wizards.category"
            class="com.aptana.editor.php.internal.ui.wizard.NewPHPProjectWizard"
            finalPerspective="com.aptana.ui.WebPerspective"
            icon="icons/full/obj16/php.gif"
            id="com.aptana.editor.php.NewPHPProjectWizard"
            name="%new-project-wizard.name"
            preferredPerspectives="com.aptana.ui.WebPerspective"
            project="true">
         <description>
            %new-project-wizard.description
         </description>
      </wizard>
      <primaryWizard
            id="com.aptana.editor.php.NewPHPProjectWizard">
      </primaryWizard>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            categoryId="org.eclipse.ui.category.project"
            description="Clean and rebuild the referenced PHP libraries"
            id="com.aptana.editor.php.cleanPHPLibraries"
            name="Rebuild PHP Libraries">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.actionSets">
      <actionSet
            id="com.aptana.editor.php.phpLibrariesBuilding"
            label="PHP Libraries Builder"
            visible="true">
         <action
               class="com.aptana.editor.php.indexer.CleanLibrariesAction"
               definitionId="com.aptana.editor.php.cleanPHPLibraries"
               icon="icons/full/obj16/phpBuild.png"
               id="com.aptana.editor.php.building.cleanLibraries"
               label="Rebuild PHP Libraries..."
               menubarPath="project/buildClean"
               style="push">
         </action>
      </actionSet>
   </extension>
   <extension
         id="id1"
         point="org.eclipse.core.resources.builders">
      <builder
            hasNature="true">
         <run
               class="com.aptana.editor.php.indexer.IncrementalPHPProjectBuilder">
         </run>
      </builder>
   </extension>

</plugin>
